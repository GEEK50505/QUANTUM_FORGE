import React, { useState, useEffect } from 'react'
import { FiRefreshCw, FiChevronLeft, FiChevronRight } from 'react-icons/fi'
import JobCard from './JobCard'
import { JobResponse } from '../types'
import { listJobs, deleteJob } from '../api/client'

interface JobListProps {
  onViewJob: (jobId: string) => void
}

const JobList: React.FC<JobListProps> = ({ onViewJob }) => {
  const [jobs, setJobs] = useState<JobResponse[]>([])
  const [loading, setLoading] = useState(true)
  const [error, setError] = useState('')
  const [filter, setFilter] = useState<string>('all')
  const [currentPage, setCurrentPage] = useState(1)
  const jobsPerPage = 10

  const fetchJobs = async () => {
    try {
      setLoading(true)
      const status = filter === 'all' ? undefined : filter
      const fetchedJobs = await listJobs(status)
      setJobs(fetchedJobs)
      setError('')
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to fetch jobs')
    } finally {
      setLoading(false)
    }
  }

  useEffect(() => {
    fetchJobs()
    
    // Auto-refresh every 5 seconds
    const interval = setInterval(fetchJobs, 5000)
    return () => clearInterval(interval)
  }, [filter])

  const handleDelete = async (jobId: string) => {
    try {
      await deleteJob(jobId)
      // Remove job from list
      setJobs(jobs.filter(job => job.job_id !== jobId))
    } catch (err) {
      setError(err instanceof Error ? err.message : 'Failed to delete job')
    }
  }

  const handleFilterChange = (newFilter: string) => {
    setFilter(newFilter)
    setCurrentPage(1)
  }

  const filteredJobs = jobs.filter(job => {
    if (filter === 'all') return true
    return job.status.toLowerCase() === filter
  })

  // Pagination
  const indexOfLastJob = currentPage * jobsPerPage
  const indexOfFirstJob = indexOfLastJob - jobsPerPage
  const currentJobs = filteredJobs.slice(indexOfFirstJob, indexOfLastJob)
  const totalPages = Math.ceil(filteredJobs.length / jobsPerPage)

  const paginate = (pageNumber: number) => setCurrentPage(pageNumber)

  if (loading && jobs.length === 0) {
    return (
      <div className="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
        <div className="flex justify-between items-center mb-6">
          <h2 className="text-xl font-bold text-gray-900 dark:text-white">Recent Jobs</h2>
          <button
            onClick={fetchJobs}
            className="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400"
            aria-label="Refresh"
          >
            <FiRefreshCw className="animate-spin h-5 w-5" />
          </button>
        </div>
        
        <div className="space-y-4">
          {[...Array(3)].map((_, i) => (
            <div key={i} className="animate-pulse">
              <div className="h-24 bg-gray-200 dark:bg-gray-700 rounded-lg"></div>
            </div>
          ))}
        </div>
      </div>
    )
  }

  return (
    <div className="bg-white dark:bg-gray-800 rounded-xl shadow-md p-6">
      <div className="flex justify-between items-center mb-6">
        <h2 className="text-xl font-bold text-gray-900 dark:text-white">Recent Jobs</h2>
        <button
          onClick={fetchJobs}
          className="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400"
          aria-label="Refresh"
        >
          <FiRefreshCw className={`h-5 w-5 ${loading ? 'animate-spin' : ''}`} />
        </button>
      </div>

      {/* Filter Buttons */}
      <div className="flex flex-wrap gap-2 mb-6">
        <button
          onClick={() => handleFilterChange('all')}
          className={`px-3 py-1.5 text-sm rounded-full ${
            filter === 'all'
              ? 'bg-blue-100 text-blue-800 dark:bg-blue-900/30 dark:text-blue-300'
              : 'bg-transparent text-gray-700 dark:text-gray-300'
          }`}
        >
          All
        </button>
      </div>
      
      <div className="space-y-4">
        {currentJobs.map(job => (
          <JobCard key={job.job_id} job={job} onViewDetails={onViewJob} onDelete={handleDelete} />
        ))}
      </div>

      {/* Pagination Controls */}
      {totalPages > 1 && (
        <div className="mt-6 flex justify-center items-center space-x-2">
          <button onClick={() => paginate(Math.max(1, currentPage - 1))} className="p-2 rounded-md">
            <FiChevronLeft />
          </button>
          {[...Array(totalPages)].map((_, i) => (
            <button key={i} onClick={() => paginate(i + 1)} className={`px-2 py-1 rounded-md ${currentPage === i + 1 ? 'bg-blue-500 text-white' : 'bg-transparent'}`}>
              {i + 1}
            </button>
          ))}
          <button onClick={() => paginate(Math.min(totalPages, currentPage + 1))} className="p-2 rounded-md">
            <FiChevronRight />
          </button>
        </div>
      )}
    </div>
  )
}

export default JobList
